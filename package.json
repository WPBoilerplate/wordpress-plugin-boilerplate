{
  "name": "wordpress-plugin-boilerplate",
  "title": "WordPress Plugin Boilerplate",
  "description": "WordPress Plugin Boilerplate by AcrossWP.",
  "homepage": "https://github.com/woocommerce/woocommerce/wiki",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/acrosswp/wordpress-plugin-boilerplate.git"
  },
  "author": "AcrossWP",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/acrosswp/wordpress-plugin-boilerplate/issues"
  },
  "scripts": {
    "start": "npm run start-frontend && npm run start-backend",
    "build": "npm run build-frontend && npm run build-backend",
    "start-frontend": "wp-scripts start",
    "build-frontend": "wp-scripts build",
    "start-backend": "wp-scripts start --webpack-src-dir=src/backend/ --output-path=build/backend/",
    "build-backend": "wp-scripts build --webpack-src-dir=src/backend/ --output-path=build/backend/"
  },
  "keywords": [
    "wordpress-plugin-boilerplate"
  ],
  "devDependencies": {
    "@wordpress/scripts": "^27.8.0"
  }
}
